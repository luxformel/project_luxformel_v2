.chapter-index-wrapper {
  /* padding: 2rem;
  margin-left: 0.5rem; */

  margin-top: 55px;

  margin: 0.5rem 2rem;
  padding: 1rem;
  max-width: 50rem;
}

hr {
  color: var(--black);
  border-top: 3px solid;
}

h1 {
  padding-bottom: 1rem;
  text-decoration: underline;
  text-transform: uppercase;
  text-align: left;
  font-family: Arial;
  font-size: 2rem;
  font-weight: bolder;
  letter-spacing: -0.05rem;
  color: var(--black);
}

h2 {
  color: var(--black);
  padding: 1rem;
  font-size: 2rem;
  text-decoration: underline;
}

h3 {
  color: var(--black);
  padding: 1rem;
  font-size: 1.2rem;
  font-style: italic;
}

p {
  color: var(--black);
  font-size: 1rem;
}

a {
  color: var(--default-link-color);
  font-size: 1rem;
}

a:hover {
  color: var(--default-link-color-hover);
}

ol,
ul {
  margin-left: 2rem;
}
li {
  margin-left: 1.4rem;
}
ol > li {
  list-style: decimal;
}
ul > li {
  list-style: disc;
}

.index-link {
  padding: 20px;
  font-size: 1.8rem;
  font-family: "Roboto Mono", monospace;

  text-decoration: none;

  line-height: 4.8rem;

  cursor: pointer;
  list-style-position: inside;
  margin-left: 0rem;
  color: var(--chapter-index-link-color);
}
.index-link:hover {
  color: var(--accent-color);
  text-decoration: underline;
}

ol ::marker {
  color: var(--black);
  font-size: 2rem;
  margin: 0;
  padding: 0;
}

ul ::marker {
  list-style: initial;
  color: var(--black);
}

@media only screen and (min-width: 780px) {
  .chapter-index-wrapper {
    margin-left: 5rem;
  }
}

@media only screen and (min-width: 1010px) {
  .chapter-index-wrapper {
    margin-left: 10rem;
  }
}
